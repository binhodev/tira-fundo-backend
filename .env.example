# Arquivo de exemplo - NÃO COMMITAR COM VALORES REAIS
# Copie para .env e ajuste os valores para seu ambiente

# === CONFIGURAÇÕES DE SERVIDOR ===
HOST=0.0.0.0
PORT=8000
WORKERS=2
LOG_LEVEL=info

# === CONFIGURAÇÕES DE CORS ===
# Adicione suas origens separadas por vírgula
CORS_ORIGINS=http://localhost:3000,https://seudominio.com

# === CONFIGURAÇÕES DO MODELO IA ===
DEFAULT_MODE=base
MAX_BATCH_SIZE=5
ENABLE_MODEL_CACHE=true
SUPPRESS_PYTORCH_WARNINGS=true

# === CONFIGURAÇÕES DE CACHE ===
CACHE_DIR=/app/cache
MODEL_CACHE_SIZE=2

# === CONFIGURAÇÕES DE SEGURANÇA ===
MAX_FILE_SIZE=10485760  # 10MB em bytes

# === CONFIGURAÇÕES DE PRODUÇÃO ===
# Para desenvolvimento local, use:
# HOST=127.0.0.1
# CORS_ORIGINS=http://localhost:3000

# Para produção, ajuste:
# HOST=0.0.0.0
# CORS_ORIGINS=https://seudominio.com,https://www.seudominio.com
